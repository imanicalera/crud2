<%- include('layouts/header') %>
<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if(message) { %>
      <div class="alert alert-dismissible fade show alert-<%= message.type%>" role="alert">
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
        <strong>
          <%= message.message %>
        </strong>
      </div>
      <% } %>
      <div class="table-responsive">
        <% if (ads !='' ) { %>
        <table class="table table-striped text-center">
          <thead>
            <tr class="table-dark">
              <th>Ad ID</th>
              <th>Name</th>
              <th>E-Mail</th>
              <th>Mobile</th>
              <th>Message</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% ads.forEach((row, index)=> { %>
            <tr class="align-middle">
              <td>
                <%= row.addid %>
              </td>
              <td>
                <%= row.name %>
              </td>
              <td>
                <%= row.email %>
              </td>
              <td>
                <%= row.phone %>
              </td>
              <td> <%= row.message %></td>

              <td>
               
                <a href="/addelete/<%= row._id %>" class="text-danger" onclick="return confirm('Are you sure to delete record ?');">
                  <i class="fa fa-trash fa-lg mx-1"></i>
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <%} else { %>
        <h1 class="text-center text-secondary mt-5">User Not found in database</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>